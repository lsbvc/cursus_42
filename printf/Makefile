NAME = libftprintf.a

LIB = ar rcs

SRC = ft_puts.c ft_printf.c ft_putdec.c

OBJ = $(SRC:.c=.o)

CC = gcc

CFLAGS = -Werror -Wall -Wextra

RM = rm -f

.c.o:
	$(CC) $(CFLAGS) -c $< -o ${<:.c=.o}

all: $(NAME)

$(NAME): $(OBJ)
	$(LIB) $(NAME) $(OBJ)

clean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all 

comp: main.c ${NAME}
	@$(CC) $(CFLAGS) main.c ${NAME} -o test
	@./test

.PHONY: all clean fclean re comp epa


